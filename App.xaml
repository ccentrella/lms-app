	<Application x:Class="RecordPro.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 StartupUri="MainWindow.xaml" Startup="App_Started"
			 DispatcherUnhandledException="Application_DispatcherUnhandledException">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>

				<!--The default theme that comes installed with Record Pro.-->
				<ResourceDictionary Source="Crystal 2017 Modern.xaml" />
				
				<!--The supplement for the default theme.-->
				<ResourceDictionary Source="Crystal 2017 Modern Supplement.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
